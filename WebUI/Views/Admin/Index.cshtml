@model IEnumerable<Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header-admin">
    <h2 class="title-admin">
        Список книг
    </h2>
    @Html.ActionLink("Добавить книгу", "Create", null, new { @class = "btn btn-success btn-create" })
</div>

<div class="card cont">    
    <div class="card-body">
        <table class="table table-striped table-bordered table-secondary">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.PublishYear)
                </th>*@
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Действия
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { item.BookId})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.PublishYear)
                </td>*@
                <td class="text-right">
                    @item.Price.ToString("# руб.")
                </td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("BookId", item.BookId)
                        <input type="submit" class="btn btn-danger btn-group-sm" value="Удалить"/>
                    }
                </td>
            </tr>
            }
        </table>
    </div>    
</div>

