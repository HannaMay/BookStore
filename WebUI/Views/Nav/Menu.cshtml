@model IEnumerable<string>

@Html.ActionLink("Домой", "List", "Books", null, new { @class = "btn btn-info" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
        {
            controller = "Books",
            action = "List",
            genre = link,
            page = 1
        }, new
        {
            @class = "btn btn-info" + (link == ViewBag.SelectedGenre ? " current-btn" : "")
        }
    )
}
